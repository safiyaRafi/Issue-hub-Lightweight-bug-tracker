# Example environment variables for deployment
# Copy this file to .env and fill with real values before deploying

# Database URL (Postgres recommended for production)
# Example: postgresql://user:password@hostname:5432/issuehub
DATABASE_URL=

# Secret key used for signing JWTs - change this in production
SECRET_KEY=replace-me-with-a-secure-random-string

# Token algorithm and expiry (minutes)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS origins for frontend (comma separated)
CORS_ORIGINS=https://your-frontend-domain.com

# Preferred password scheme for new hashes (bcrypt recommended in production)
PREFERRED_PASSWORD_SCHEME=bcrypt
